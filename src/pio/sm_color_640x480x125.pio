.program sm_color_640x480x125



pull block                        ; get buffer length (once)
mov y, osr
.wrap_target

set pins, 0 				      ; low color pins in blanking
mov x, y

wait 1 irq 1 [3]			      ; wait vsync irq 1 active mode (starts 5 cycles after execution)

colorout:
	pull block				      ; get color value
	out pins, 4	[4]			      ; 1st 4-bit pixel 1+4     = 5 cycles
	out pins, 4	[2]			      ; 2nd 4-bit pixel 1+2+1+1 = 5 cycles
	jmp x-- colorout

.wrap



% c-sdk {
static inline void sm_color_640x480x125_program_init(PIO pio, uint sm, uint offset, uint pin) {
    pio_sm_config c = sm_color_640x480x125_program_get_default_config(offset);
    sm_config_set_set_pins(&c, pin, 4);
    sm_config_set_out_pins(&c, pin, 4);
    pio_gpio_init(pio, pin);
    pio_gpio_init(pio, pin+1);
    pio_gpio_init(pio, pin+2);
    pio_gpio_init(pio, pin+3);
    pio_sm_set_consecutive_pindirs(pio, sm, pin, 4, true);
    pio_sm_init(pio, sm, offset, &c);
}
%}
